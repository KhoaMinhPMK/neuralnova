# Prevent PHP execution in videos directory
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Allow only video files
<FilesMatch "\.(mp4|webm)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny all other file types
<FilesMatch "^(?!.*\.(mp4|webm)$).*$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
